        <h2>Registro: </h2>
        <form class="form-horizontal">

            <div class="form-group">
                <label for="nick" class="control-label col-sm-2">Usuario*:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="nick" name="nick" placeholder="Introduzca su Usuario"/>
                </div>
            </div>

            <div class="form-group" id="virtualKeyboard">
                <label for="password" class="control-label col-sm-2">Contraseña*:</label>
                <div class="col-sm-4">
                    <input type="password" class="form-control" id="passwordUser" disabled/>
                    <input type="password" class="form-control" id="password" name="password" />
                </div>
                <div class="col-sm-4">
                    <div>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                        <button type="button" class="btn btn-primary btn-sm"></button>
                    </div>
                </div>
                <a href="#" id="clearKey" class="col-sm-2">Limpiar clave</a>
            </div>

            <div class="form-group">
                <label for="email" class="control-label col-sm-2">Email*:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Introduzca su Correo Electrónico" />
                </div>
            </div>
            
            <div class="form-group">
                <label for="datepicker" class="control-label col-sm-2">Fecha Nacimiento:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="datepicker" name="datepicker"/>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn-primary"/>
            </div>
        </form>
